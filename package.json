{
  "name": "pxshot",
  "version": "1.0.0",
  "description": "Official Node.js/TypeScript SDK for Pxshot - Screenshot API",
  "author": "Pxshot",
  "license": "MIT",
  "keywords": [
    "screenshot",
    "api",
    "pxshot",
    "webpage",
    "capture",
    "browser",
    "headless"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/pxshot/pxshot-node.git"
  },
  "homepage": "https://pxshot.com",
  "bugs": {
    "url": "https://github.com/pxshot/pxshot-node/issues"
  },
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "engines": {
    "node": ">=18.0.0"
  },
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vitest run",
    "test:watch": "vitest",
    "prepublishOnly": "npm run build"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "tsup": "^8.0.1",
    "typescript": "^5.3.3",
    "vitest": "^1.1.0"
  },
  "sideEffects": false
}
